# Vercel Production Environment Variables
NODE_ENV=production
ENABLE_CLUSTERING=false

# JWT Configuration
JWT_SECRET=your_super_secure_jwt_secret_key_change_this_in_production
JWT_EXPIRES_IN=7d

# MongoDB Atlas (Free Tier)
MONGODB_ATLAS_URI=mongodb+srv://username:password@cluster0.xxxxx.mongodb.net/etrainer?retryWrites=true&w=majority

# CORS Configuration
ALLOWED_ORIGINS=https://your-frontend-domain.vercel.app,http://localhost:3000,http://localhost:5173

# Optional: Cloudinary (Free Tier)
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret

# Optional: Redis (can be disabled for testing)
# REDIS_URL=redis://your-redis-url

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Performance
CACHE_TTL_SECONDS=3600
SLOW_QUERY_THRESHOLD_MS=1000
